<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ncr.interns.codecatchers.incredicabs.Dashboard"
    tools:showIn="@layout/app_bar_dashboard">

    <Button
        android:id="@+id/button_regular"
        android:layout_width="270dp"
        android:layout_height="66dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="104dp"
        android:text="Regular Shift"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_scheduled"
        android:layout_width="270dp"
        android:layout_height="66dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="30dp"
        android:text="Scheduled CAB"
        app:layout_constraintEnd_toEndOf="@+id/button_regular"
        app:layout_constraintStart_toStartOf="@+id/button_regular"
        app:layout_constraintTop_toBottomOf="@+id/button_regular" />

    <Button
        android:id="@+id/button_unscheduled"
        android:layout_width="270dp"
        android:layout_height="66dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="30dp"
        android:onClick="reqUscheduledCab"
        android:text="UnScheduled cab"
        app:layout_constraintEnd_toEndOf="@+id/button_scheduled"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button_scheduled"
        app:layout_constraintTop_toBottomOf="@+id/button_scheduled" />

    <Button
        android:id="@+id/button_needAGuard"
        android:layout_width="270dp"
        android:layout_height="66dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="30dp"
        android:text="Need a Guard?"
        app:layout_constraintEnd_toEndOf="@+id/button_unscheduled"
        app:layout_constraintStart_toStartOf="@+id/button_unscheduled"
        app:layout_constraintTop_toBottomOf="@+id/button_unscheduled" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:text="REQUEST FOR CABS"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        app:layout_constraintEnd_toEndOf="@+id/button_regular"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/button_regular"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
