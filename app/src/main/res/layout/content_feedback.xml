<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="12dp"
    android:focusable="true"
    android:focusableInTouchMode="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ncr.interns.codecatchers.incredicabs.Feedback.FeedbackActivity"
    tools:showIn="@layout/activity_feedback">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/horizontal_linear_layout_margin"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"
                        android:layout_weight="4"
                        android:padding="7dp"
                        android:text="Date"
                        android:textColor="#000000"
                        android:textSize="@dimen/request_lable_text_size"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/text_fromDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="6"
                        android:drawableEnd="@drawable/ic_date_ca"
                        android:background="@drawable/background_edittext"
                        android:ems="10"
                        android:focusable="false"
                        android:padding="@dimen/edittxt_padding" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/horizontal_linear_layout_margin"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="4"
                        android:padding="7dp"
                        android:text="Pickup/Drop"
                        android:textColor="#000000"
                        android:textSize="@dimen/request_lable_text_size"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/options_drop"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_margin="6dp"
                        android:layout_weight="6"
                        android:hint="Select"
                        android:background="@drawable/background_edittext"
                        android:gravity="center"
                        android:padding="5dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/horizontal_linear_layout_margin"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="4"
                        android:padding="7dp"
                        android:text="Type"
                        android:textColor="#000000"
                        android:textSize="@dimen/request_lable_text_size"
                        android:textStyle="bold" />


                    <Spinner
                        android:id="@+id/options_type"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_margin="2dp"
                        android:layout_weight="6"
                        android:background="@drawable/background_edittext"
                        android:editable="false"
                        android:ems="10"
                        android:focusable="false" />


                </LinearLayout>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/horizontal_linear_layout_margin"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:id="@+id/textView_selectTime"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="4"
                    android:padding="7dp"
                    android:text="Shift Timing"
                    android:textColor="#000000"
                    android:textSize="@dimen/request_lable_text_size"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/Shift_timing"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="6"
                    android:background="@drawable/background_edittext_grey"
                    android:focusable="false"
                    android:padding="@dimen/edittxt_padding" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/horizontal_linear_layout_margin"
                android:weightSum="10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="4"
                    android:padding="7dp"
                    android:text="Cab Number"
                    android:textColor="#000000"
                    android:textSize="@dimen/request_lable_text_size"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/Text_cab"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_margin="2dp"
                    android:layout_weight="6"
                    android:focusable="false"
                    android:background="@drawable/background_edittext_grey"
                    android:padding="6dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/horizontal_linear_layout_margin"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_weight="4"
                        android:padding="7dp"
                        android:text="Complaints"
                        android:textColor="#000000"
                        android:textSize="@dimen/request_lable_text_size"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/options_spinner"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_margin="4dp"
                        android:layout_weight="6"
                        android:background="@drawable/background_edittext"
                        android:gravity="center"
                        android:padding="5dp" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:orientation="vertical"
                android:weightSum="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="Comments"
                    android:textColor="#000000"
                    android:textSize="@dimen/request_lable_text_size"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/text_reasonForRequest"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_edittext"
                    android:ems="10"
                    android:hint="Enter Feedback here.."
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:inputType="textMultiLine"
                    android:padding="@dimen/edittxt_padding" />

            </LinearLayout>


            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/ncr_background_default"
                android:gravity="center"
                android:elevation="4dp"
                android:text="Submit"
                android:textColor="#ffffff"
                android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>


</android.support.constraint.ConstraintLayout>
