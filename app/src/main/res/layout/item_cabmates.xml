<?xml version="1.0" encoding="utf-8"?>



<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:background="#ffffff"
        android:padding="4dp"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:background="#ffffff"
            android:orientation="vertical"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:weightSum="10">

                <TextView
                    android:id="@+id/employeeName"
                    android:layout_width="0dp"
                    android:layout_weight="7"
                    android:gravity="left"
                    android:textStyle="bold"
                    android:paddingLeft="4dp"
                    android:layout_height="match_parent"
                    android:text="Gaurav Sati"
                    android:textSize="@dimen/cabmate_name_textsize"/>

                <TextView
                    android:id="@+id/emp_pickupTime"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="right"
                    android:text="8:00AM"
                    android:textSize="@dimen/cabmate_pickuptime_textsize" />
            </LinearLayout>

            <TextView
                android:id="@+id/Emp_pickupAddress"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingLeft="4dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:textSize="@dimen/cabmate_address_textsize"
                android:text="NCR Corporation, Vipul Plaza, Sunciity Sector 54,Gurgaon"/>

         </LinearLayout>


        <ImageButton
            android:id="@+id/button_call_cabMate"
            android:layout_width="0dp"
            android:layout_marginLeft="5dp"
            android:tooltipText="Call Cab Mate"
            android:background="#fff"
            android:layout_height="match_parent"
            android:src="@drawable/ic_call_black_24dp"
            android:layout_weight="2"
            />

    </LinearLayout>

</LinearLayout>
