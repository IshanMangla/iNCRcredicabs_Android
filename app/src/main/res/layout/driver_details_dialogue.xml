<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:layout_margin="5dp"
    android:padding="5dp"
    android:elevation="25dp"
    app:cardCornerRadius="10dp">
    <TextView
        android:id="@+id/driver_details_not_available"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:visibility="gone"
        android:gravity="center"
        android:text="Driver Details Not Available"
        android:textSize="@dimen/shift_time_text_size"
        android:textStyle="bold"/>

      <LinearLayout
        android:id="@+id/layout_driver_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:visibility="visible"
        android:padding="5dp">

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="5dp"
              android:layout_marginRight="5dp"
              android:text="CAB DETAILS"
              android:textColor="#000"
              android:gravity="center"
              android:textSize="@dimen/shift_time_text_size"
              android:textStyle="bold" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:weightSum="1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight=".5"
                android:padding="2dp"
                android:text="Cab Number: "
                android:textSize="@dimen/cabmate_name_textsize"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dialog_cab_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight=".5"
                android:padding="2dp"
                android:text="DL 34 5678"
                android:textSize="@dimen/cabmate_name_textsize" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight=".5"
                android:padding="2dp"
                android:text="Driver Name :"
                android:textSize="@dimen/cabmate_name_textsize"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dialog_driver_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight=".5"
                android:padding="2dp"
                android:text="Bhola Ram"
                android:textSize="@dimen/cabmate_name_textsize" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight=".5"
                android:padding="2dp"
                android:text="Contact No :"
                android:textSize="@dimen/cabmate_name_textsize"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dialog_driver_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight=".5"
                android:padding="2dp"
                android:text="9999999999"
                android:textSize="@dimen/cabmate_name_textsize" />

        </LinearLayout>


        <Button
            android:id="@+id/dialog_call_driver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Call Driver"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="@dimen/checkIn_btn_size"
            android:background="@drawable/button_approve"
            />
    </LinearLayout>
</android.support.v7.widget.CardView>